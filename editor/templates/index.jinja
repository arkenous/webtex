{% extends "base.jinja" %}

{% block content %}
  <nav class="hide-on-small-only cyan lighten-1">
    <div class="nav-wrapper">
      <a href="#" class="brand-logo left">WebTeX</a>
      <ul id="nav-mobile" class="right">
        <li><a href="#" class="waves-effect waves-light"><i class="material-icons">view_list</i></a></li>
        <li><a href="#" class="waves-effect waves-light"><i class="material-icons">play_for_work</i></a></li>
        <li><a href="#" id="current">Current</a> </li>
        <li><a href="#" class="waves-effect waves-light"><i class="material-icons">settings</i></a></li>
      </ul>
    </div>
  </nav>
  <nav class="hide-on-med-and-up cyan lighten-1">
    <div class="nav-wrapper">
      <a href="#" class="brand-logo left">WebTeX</a>
      <ul id="nav-mobile" class="right">
        <li><a href="#" class="waves-effect waves-light"><i class="material-icons">view_list</i></a></li>
        <li><a href="#" id="current">Current</a> </li>
        <li><a href="#" class="waves-effect waves-light"><i class="material-icons">settings</i></a></li>
      </ul>
    </div>
  </nav>

  <div class="container-fluid">
    <div class="row">
      <p>Current User:{{ user.username }}</p>
    </div>

    <div class="row hide-on-med-and-down">
      <div class="col l6">
        <p class="center">EDITOR</p>
      </div>
      <div class="col l6">
        <p class="center">PDF PREVIEW</p>
      </div>
    </div>
    <div class="row hide-on-med-and-down">
      <div class="col l6">
        <ul class="collapsible center" data-collapsible="expandable">
          <li>
            <div class="collapsible-header waves-effect waves-teal">LaTeX</div>
            <div class="collapsible-body"><span></span></div>
          </li>
        </ul>
      </div>
      <div class="col l6">
        <ul class="collapsible center" data-collapsible="expandable">
          <li>
            <div class="collapsible-header waves-effect waves-red">RedPen</div>
            <div class="collapsible-body"><span></span></div>
          </li>
        </ul>
      </div>
    </div>

    <div class="row hide-on-large-only">
      <div class="col s12 m12">
        <ul class="tabs">
          <li class="tab col s6 m6"><a href="#editor-tab">Editor</a></li>
          <li class="tab col s6 m6"><a href="#preview-tab">Preview</a></li>
        </ul>
        <div id="editor-tab" class="col s12 m12 blue">
          <div class="row">
            <div class="col s12 m12">
              <p class="center">EDITOR</p>
            </div>
          </div>
          <div class="row">
            <div class="col s12 m12">
              <ul class="collapsible center" data-collapsible="expandable">
                <li>
                  <div class="collapsible-header waves-effect waves-teal">LaTeX</div>
                  <div class="collapsible-body"><span></span></div>
                </li>
              </ul>
            </div>
          </div>
        </div>

        <div id="preview-tab" class="col s12 m12 red">
          <div class="row">
            <div class="col s12 m12">
              <p class="center">PREVIEW</p>
            </div>
          </div>
          <div class="row">
            <div class="col s12 m12">
              <ul class="collapsible center" data-collapsible="expandable">
                <li>
                  <div class="collapsible-header waves-effect waves-red">RedPen</div>
                  <div class="collapsible-body"><span></span></div>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <script type="text/javascript">$(document).ready(function() {$('ul.tabs').tabs({'swipeable': true});})</script>
    </div>
  </div>

  <div>
    <a href="/logout">Logout</a>
  </div>

  <div class="fixed-action-btn hide-on-med-and-up">
    <a class="btn btn-floating waves-effect waves-light red">
      <i class="material-icons">play_for_work</i>
    </a>
  </div>

{% endblock %}